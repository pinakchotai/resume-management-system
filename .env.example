# Environment
NODE_ENV=production
PORT=3000

# Security
JWT_SECRET=your_secure_jwt_secret_here
ADMIN_PASSWORD_HASH=your_admin_password_hash_here
ADMIN_EMAIL=admin@example.com

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/resume-management?retryWrites=true&w=majority

# Cookie Settings
COOKIE_SECRET=your_secure_cookie_secret_here
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true

# CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload
MAX_FILE_SIZE=2097152
ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100