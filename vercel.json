{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "src/public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/css/(.*)",
            "dest": "/src/public/css/$1"
        },
        {
            "src": "/js/(.*)",
            "dest": "/src/public/js/$1"
        },
        {
            "src": "/images/(.*)",
            "dest": "/src/public/images/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/server.js"
        }
    ]
}