{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/admin",
            "dest": "server.js"
        },
        {
            "src": "/admin-login",
            "dest": "server.js"
        },
        {
            "src": "/admin-register",
            "dest": "server.js"
        },
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/(.*)",
            "dest": "public/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
} 